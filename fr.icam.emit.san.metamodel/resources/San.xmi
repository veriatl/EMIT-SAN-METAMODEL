<?xml version="1.0" encoding="UTF-8"?>
<San:Network
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:San="http://San/1.0"
    xsi:schemaLocation="http://San/1.0 San.ecore"
    name="Infrastructure"
    uri="localhost"
    port="1883">
  <processes
      name="Cooling">
    <events
        name="SwitchOnCoolingDevice"
        subscribe="//@bindings.0 //@bindings.1 //@bindings.3 //@bindings.4"/>
    <events
        name="SwitchOffCoolingDevice"
        subscribe="//@bindings.2"/>
  </processes>
  <devices name="PeakTechF1"
      instrument="//@instruments.2"/>
  <devices name="PeakTechF2"
      instrument="//@instruments.2"/>
  <devices name="ThermistorB"
      instrument="//@instruments.1"/>
  <devices name="StopWatch1"
      instrument="//@instruments.0"/>
  <devices name="StopWatch2"
      instrument="//@instruments.0"/>
  <instruments
      name="BenchTimer1221">
    <features
        name="Duration"
        factor="-3"
        mode="Output"
        measure="//@measures.0"/>
  </instruments>
  <instruments
      name="Thermistor">
    <features
        name="CurrentTemp"
        mode="Output"
        measure="//@measures.1"/>
  </instruments>
  <instruments
      name="PeakTech6226">
    <features
        name="PowerConsumption"
        mode="Output"
        measure="//@measures.2"/>
  </instruments>
  <measurands
      name="BuildingA"
      measurands="//@measurands.1 //@measurands.2"/>
  <measurands
      name="Floor1"/>
  <measurands
      name="Floor2"/>
  <measures
      name="Time"
      unit="Seconds"
      type="Integer"/>
  <measures
      name="Temperature"
      unit="Celcius"
      type="Float"/>
  <measures
      name="Power"
      unit="Watts"
      type="Float"/>
  <bindings
      name="b1"
      device="//@devices.0"
      measurand="//@measurands.1"
      feature="//@instruments.2/@features.0"/>
  <bindings
      name="b2"
      device="//@devices.1"
      measurand="//@measurands.2"
      feature="//@instruments.2/@features.0"/>
  <bindings
      name="b3"
      device="//@devices.2"
      measurand="//@measurands.0"
      feature="//@instruments.1/@features.0"/>
  <bindings
      name="b4"
      device="//@devices.3"
      measurand="//@measurands.1"
      feature="//@instruments.0/@features.0"/>
  <bindings
      name="b5"
      device="//@devices.4"
      measurand="//@measurands.2"
      feature="//@instruments.0/@features.0"/>
</San:Network>
